@model USBDProperty.Models.PropertyImages


@{
    ViewData["Title"] = "Edit";
    if (User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        // Layout = "~/Views/Shared/_AdminLayout.cshtml";
        Layout = "~/Views/Shared/LayoutAdminLTe.cshtml";
    }
}

<div class="content-wrapper" style="min-height: 1345.31px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Locations</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Areas">Area</a></li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title"> Updating Area</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Edit" method="post" asp-controller="PropertyImages" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ID" />
                            <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="propertyInfoId" class="control-label"> Property </label>
                                        <select asp-for="propertyInfoId" class="form-control" asp-items="ViewBag.propertyInfoId">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Title" class="control-label"></label>
                                        <input asp-for="Title" class="form-control" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label asp-for="MultipleImage" class="control-label"> Image Upload</label>
                                        <input type="file" id="files" name="MultipleImage" class="form-control" accept="image/*" multiple />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div style="width:180px;height:180px; border:2px solid #012970; border-radius:10px; padding:10px;">
                                        <img src="@Url.Content(Model.MultiImagePath)" style="width:155px;height:155px;" alt="@Model.Title" id="imgPreview" />

                                        <input type="text" asp-for="MultiImagePath" class="form-control" name="Image" id="path" hidden />
                                    </div>
                                    <button type="button" id="btnChange" class="btn btn-primary mt-2">Change</button>
                                </div>
                            </div>
                            </div>


                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="form-group mt-2">
                                            <input type="submit" value="Update" class="btn btn-primary" />
                                        </div>
                                    </div>
                                    <div class="col-md-3 mt-2">
                                        <div class="form-group">
                                            <a asp-action="Index">Back to List</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                    <!-- /.card -->


                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


