@model IEnumerable<USBDProperty.Models.PropertyImages>
@*<link href="~/AdminAsserts/vendor/simple-datatables/style.css" rel="stylesheet"/>*@

@{
    ViewData["Title"] = "Index";
    if(User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<div class="card">
    <div class="card-body">
         <div class="row">
             <form asp-action="Index" asp-controller="PropertyImages" >
            <div class="col-md-3">
                <div class="form-group card-title">
                    <label class="control-label"> Agent </label>
                    <select class="form-control" asp-items="ViewBag.AgentId" name="AgentId" id="agent">
                        @*<option value="0">Select Property</option>*@
                    </select>
                </div>     
            </div>
            <div class="col-md-3">
                <div class="form-group card-title">
                    <label class="control-label"> Projects </label>
                    <select class="form-control" id="projects">
                        @*<option value="0">Select Property</option>*@
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group card-title">
                    <label class="control-label"> Property </label>
                        <select class="form-control" id="propertyId" name="propertyId">
                        @*<option value="0">Select Property</option>*@
                    </select>
                </div>
            </div>
            <div class="col-md-3 mt-5">
                 <div class="form-group card-title">
                      @*<input type="submit" value="Search"/>*@
                      <button type="submit" class="search-bar">Search</button>
                    
                 </div>           
            </div>
            
            @*<div class="col-md-9">
                <h5 class="card-title">Multiple Project Images</h5>
                </div>
                <div class="col-md-3">
                <h5 class="card-title"><a asp-action="Create">Create New</a></h5>
                </div>*@
       
            </form>
            </div>
        <table class="table dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MultiImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropertyDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <img src="@Url.Content(item.MultiImagePath)" alt="@item.PropertyDetails.Title" height="180" width="220"/>
                  @* @if(item.MultiImagePath != null)
                   {
                       @for(int i=0; i<item.MultiImagePath.Count(); i++)
                       
                        {
                            <img src="@Url.Content(item.MultiImagePath)" alt="@item.PropertyDetails.Title" height="180" width="220"/>
                        }
                    }*@
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PropertyDetails.ProjectId)
                </td>              
                <td class="col-md-2">
                    <div class="btn-group">
                        <button type="button" class="btn btn-success">Action</button>
                        <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-primary" asp-action="Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Edit</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-primary" asp-action="Details" asp-route-id="@item.ID"><i class="bi bi-eye-fill"></i>Details</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-primary" asp-action="Delete" asp-route-id="@item.ID"><i class="bi bi-trash"></i>Delete</a></li>

                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            //$(".table").dataTable();
            loadAgent();
            loadProject();
            loadProperty();
            $("#agent").change(function () {
                loadProject($(this).val());
            })
            $("#projects").change(function () {
                loadProperty($(this).val());
            })
        })
        function loadAgent(){
            $.get("/DevelopersorAgents/GetAuthenticateAgent", function (data, status){
                console.log(data);
                $("#agent").empty();
                $("#agent").append($('<option></option>').val("0").html("Select Agent"));
                $.each(data.data, function(i, v){
                    $("#agent").append($('<option></option>').val(v.id).html(v.companyName));
                })
            })
        }

        function loadProject(id){
            //console.log("dev id: "+id)
            $.get("/ProjectsInfoes/GetDrpProject?devid=" +id, function (data, status){
                console.log(data.data)
                $("#projects").empty();
                $("#projects").append($('<option></option>').val("0").html("Select Project"));
                $.each(data.data, function(i, v){
                    $("#projects").append($('<option></option>').val(v.id).html(v.projectName));
                })
            })
        }

        function loadProperty(prid){
            $.get("/PropertyDetails/GetDrpProperty?pid=" +prid, function(data, status){
                console.log(data.data)
                $("#propertyId").empty();
                $("#propertyId").append($('<option></option>').val("0").html("Select Project"));
                $.each(data.data, function(i, v){
                    $("#propertyId").append($('<option></option>').val(v.propertyInfoId).html(v.title));
                })
            })
        }
    </script>
}