@model IEnumerable<USBDProperty.Models.PropertyImages>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MultiImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropertyDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <img src="@Url.Content(item.MultiImagePath)" alt="@item.PropertyDetails.Title" height="180" width="220" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PropertyDetails.Title)
                </td>              
                <td class="col-md-2">
                    <div class="btn-group">
                        <button type="button" class="btn btn-success">Action</button>
                        <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-primary" asp-action="Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Edit</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-primary" asp-action="Details" asp-route-id="@item.ID"><i class="bi bi-eye-fill"></i>Details</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-primary" asp-action="Delete" asp-route-id="@item.ID"><i class="bi bi-trash"></i>Delete</a></li>

                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
