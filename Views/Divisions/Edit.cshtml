@model USBDProperty.Models.Division

@{
    ViewData["Title"] = "Edit";
    if(User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<main id="main">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><a asp-action="Index" asp-controller="Divisions"><i class="bi bi-arrow-left"></i></a> Updating Division</h5>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DivisionID" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DivisionName" class="control-label"></label>
                            <input asp-for="DivisionName" class="form-control" />
                            <span asp-validation-for="DivisionName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CountryId" class="control-label"></label>
                            <select asp-for="CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
                            <span asp-validation-for="CountryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group mt-2">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="col-md-3 mt-2">
                        <div class="form-group">
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</main>

