@model USBDProperty.Models.Division

@{
    ViewData["Title"] = "Details";
    if(User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<main id="main">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">Division Details</h5>
            <hr style="width:100%; "/>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DivisionID)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DivisionID)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DivisionName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DivisionName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Country.CountryName)
                </dd>
            </dl>
            <div>
                    <a asp-action="Edit" asp-route-id="@Model?.DivisionID">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</main>

