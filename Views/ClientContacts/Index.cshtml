@model IEnumerable<USBDProperty.Models.ClientContact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @*  <th>
                @Html.DisplayNameFor(model => model.PropertyForId)
                </th> *@
            <th>
                @Html.DisplayNameFor(model => model.ContactDate)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Message)
                </th>*@
            @*   <th>
                @Html.DisplayNameFor(model => model.PropertyType)
                </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @*    <td>
                    @Html.DisplayFor(modelItem => item.PropertyForId)
                    </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.ContactDate)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.Message)
                    </td>*@
                @* <td>
                    @Html.DisplayFor(modelItem => item.PropertyType.PropertyTypeName)
                    </td> *@
                @*<td>
                    <a asp-action="Edit" asp-route-id="@item.ClientContactId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClientContactId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClientContactId">Delete</a>
                </td>*@
                <td class="col-md-2">
                    <div class="btn-group">
                        <button type="button" class="btn btn-success">Action</button>
                        <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-primary" asp-action="Edit" asp-route-id="@item.ClientContactId"><i class="bi bi-pencil-square"></i>Edit</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-primary" asp-action="Details" asp-route-id="@item.ClientContactId"><i class="bi bi-eye-fill"></i>Details</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-primary" asp-action="Delete" asp-route-id="@item.ClientContactId"><i class="bi bi-trash"></i>Delete</a></li>

                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
