
@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Index";
    // Layout = "~/Views/Shared/_AdminLayout.cshtml";
     Layout = "~/Views/Shared/LayoutAdminLTe.cshtml";
}

<div class="content-wrapper" style="min-height: 1302.12px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Users</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Users">Users</a></li>
                        <li class="breadcrumb-item active">Index</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-9">
                                    <h3 class="card-title">All Roles</h3>
                                </div>
                              @*   <div class="col-md-3">
                                    <h5 class="card-title"><a asp-action="Create">Create New</a></h5>
                                </div> *@
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">

                            @if (Model.Any())
                            {
                                <a class="btn btn-primary mb-3" style="width:auto" href="/ROles/Create">Add new role</a>
                                <ul>
                                    @foreach (var role in Model)
                                    {
                                        <li>
                                            @role.Name
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="card">
                                    <div class="card-header">
                                        No roles created yet
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            Use the button below to create a role
                                        </h5>
                                        <a class="btn btn-primary" style="width:auto"
                                           asp-controller="Roles" asp-action="Create">
                                            Create Role
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- /.card-body -->
 
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

