@model USBDProperty.Models.ProjectImageGallery

@{
    ViewData["Title"] = "Details";
    if (User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        // Layout = "~/Views/Shared/_AdminLayout.cshtml";
        Layout = "~/Views/Shared/LayoutAdminLTe.cshtml";
    }
}

<div class="content-wrapper" style="min-height: 1302.12px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Project Image Galleries</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="ProjectImageGalleries">Project Images</a></li>
                        <li class="breadcrumb-item active">Details</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-9">
                                    <h3 class="card-title">Details of Project Images</h3>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.ImagePath)
                                </dt>
                                <dd class="col-sm-9">
                                    <img class="img-responsive" src="@Url.Content(@Model.ImagePath)" height="180" width="220" />
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.ProjectsInfo)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.ProjectsInfo.Location)
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer">
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div>
         </div>
            <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


