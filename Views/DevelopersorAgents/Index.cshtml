@model IEnumerable<USBDProperty.Models.DevelopersorAgent>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
    if (User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

@{
    @User.Identity.Name
}

<div class="card">
    <div class="card-body">

        <div class="row">
            <div class="col-md-9">
                <h5 class="card-title text-center">All Developers</h5>
            </div>
            <div class="col-md-3">
                <h5 class="card-title"><a asp-action="Create">Create New</a></h5>
            </div>
        </div>

        @*<table class="table datatable">*@
        <table class="table" id="datatable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Logo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Banner)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>*@
                    @*  <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                        </th> *@
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@Url.Content(item.Logo)" alt="@item.CompanyName" height="60" width="80" />
                        </td>
                        <td>
                            <img src="@Url.Content(item.Banner)" alt="@item.CompanyName" height="120" width="160" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>*@
                      @*<td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td> *@
                        <td class="col-md-2">
                            <div class="btn-group">
                                <button type="button" class="btn btn-success">Action</button>
                                <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="visually-hidden">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item text-primary" asp-action="Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Edit</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-primary" asp-action="Details" asp-route-id="@item.ID"><i class="bi bi-eye-fill"></i>Details</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-primary" asp-action="Delete" asp-route-id="@item.ID"><i class="bi bi-trash"></i>Delete</a></li>

                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




