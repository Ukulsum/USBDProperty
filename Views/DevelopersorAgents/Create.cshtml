@model USBDProperty.Models.DevelopersorAgent

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title text-center">All Developers Listing</h5>
        <hr style="width:100%; " />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create" enctype="multipart/form-data" method="post" asp-controller="DevelopersorAgents">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-12 row">
                        <h2>Company graphics elements</h2>
                        <hr />
                        <div class="form-group col-md-4">
                            <label class="control-label">Logo</label>
                            <input type="file" class="form-control" name="logo" id="logo" />
                        </div>
                        <div class="col-md-2">
                            <div style="width:110px; height:110px; border:2px solid #012970; border-radius: 10px; padding:10px;">
                                <img src="#" style="width:85px;height:85px;" alt="Image Upload" id="imgPreview" />
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label class="control-label">Banner</label>
                            <input type="file" class="form-control" id="banner" name="banner" />
                        </div>
                        <div class="col-md-2">
                            <div style="width:110px; height:110px; border:2px solid #012970; border-radius: 10px; padding:10px;">
                                <img src="#" style="width:85px;height:85px;" alt="Image Upload" id="imgPreviewBanner" />
                            </div>
                        </div>

                    </div>
                    <div class="col-md-12 row">
                        <h2>Company Basic Information</h2>
                        <hr />
                        <div class="form-group col-md-4">
                            <label asp-for="CompanyName" class="control-label"></label>
                            <input asp-for="CompanyName" class="form-control" />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="ContactNo" class="control-label"></label>
                            <input asp-for="ContactNo" class="form-control" />
                            <span asp-validation-for="ContactNo" class="text-danger"></span>
                        </div>
                         <div class="form-group col-md-4">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-md-12 row">

                        <div class="form-group col-md-6">
                            <label asp-for="Membership" class="control-label"></label>
                            <select asp-for="Membership" class="form-control" asp-items="@Html.GetEnumSelectList<Membership>()">
                                <option value="0">Select MemberShip</option>
                            </select>
                            @*<input asp-for="Email" class="form-control" />*@
                            <span asp-validation-for="Membership" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label">Contact Person </label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                    </div>


                    <div class="col-md-12 row">
                        <h2>Location</h2>
                        <hr />
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label">Country</label>
                                <select id="drpCountry" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Division</label>
                                <select id="drpDivision" class="form-control"></select>
                            </div>

                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label">City</label>
                                <select id="drpCity" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Area</label>
                                <select asp-for="AreaID" id="drpArea" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label">Address</label>
                                <input type="text" asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="AboutUs" class="control-label"></label>
                        <textarea type="text" asp-for="AboutUs" class="form-control"></textarea>
                        <span asp-validation-for="AboutUs" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    <div class="form-group col-md-6">
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    <script>

        $(document).ready(function () {
            loadCountry();
            CKEDITOR.replace('AboutUs', {
                height: 300,
                width: '100%',
            });
            $("#logo").change(function () {
                const file = this.files[0];
                console.log(file);
                if (file) {
                    let reader = new FileReader();
                    reader.onload = function (event) {
                        console.log(event.target.result);
                        $("#imgPreview").attr('src', event.target.result);
                    }
                    reader.readAsDataURL(file);
                }
            });
             $("#banner").change(function () {
                const file = this.files[0];
                console.log(file);
                if (file) {
                    let reader = new FileReader();
                    reader.onload = function (event) {
                        console.log(event.target.result);
                        $("#imgPreviewBanner").attr('src', event.target.result);
                    }
                    reader.readAsDataURL(file);
                }
            });


            $("#drpCountry").change(function () {
                loadDivision($(this).val())
            })
            $("#drpDivision").change(function () {
                loadCity($(this).val())
            })

            $("#drpCity").change(function () {
                loadArea($(this).val())
            })
        });
        function loadCountry() {
            $.get("/Countries/GetCountry", function (data, status) {
                console.log(data)
                $("#drpCountry").empty();
                $("#drpCountry").append($('<option></option>').val("0").html("Select country"));
                $.each(data, function (i, v) {
                    $("#drpCountry").append($('<option></option>').val(v.countryID).html(v.countryName));
                })

            })
        }

        function loadDivision(cid) {
            $.get("/Divisions/GetDivision?cid=" + cid, function (data, status) {
                console.log(data)
                $("#drpDivision").empty();
                $("#drpDivision").append($('<option></option>').val("0").html("Select Division"));
                $.each(data, function (i, v) {
                    $("#drpDivision").append($('<option></option>').val(v.divisionID).html(v.divisionName));
                })

            })
        }
        function loadCity(did) {
            $.get("/Cities/GetCities?did=" + did, function (data, status) {
                console.log(data)
                $("#drpCity").empty();
                $("#drpCity").append($('<option></option>').val("0").html("Select City"));
                $.each(data, function (i, v) {
                    $("#drpCity").append($('<option></option>').val(v.cityId).html(v.cityName));
                })

            })
        }
        function loadArea(cid) {
            $.get("/Areas/GetArea?cid=" + cid, function (data, status) {
                console.log(data)
                $("#drpArea").empty();
                $("#drpArea").append($('<option></option>').val("0").html("Select Area"));
                $.each(data, function (i, v) {
                    $("#drpArea").append($('<option></option>').val(v.areaId).html(v.areaName));
                })

            })
        }

    </script>
    }
}
