@section Scripts {
<script>
    $(document).ready(function () {

        $("#checkActive").click(function() {
        if($(this).is(':checked')){
            $("#btnUpdate").removeAttr('disabled', 'disabled');
        }
        else{
             $("#btnUpdate").attr('disabled', 'disabled');
        }
    });

    CKEDITOR.replace('AboutUs', {
        height: 300,
        width: '100%',
     });
     $("#logoChange").show();
         $("#logofile").hide();
         $("#logoChange").click(function() {
             $("#logofile").show();
             $("#logoChange").hide();
         });

          $("#bannerChange").show();
         $("#bannerFile").hide();
         $("#bannerChange").click(function() {
             $("#bannerFile").show();
             $("#bannerChange").hide();
         });

     $("#logofile").change(function () {
           const file = this.files[0];
           if (file) {
               let reader = new FileReader();
               reader.onload = function (event) {
                   $("#imgPreview").attr('src', event.target.result);
               }
               reader.readAsDataURL(file);
           }
      });
         $("#bannerFile`    ").change(function () {
            const file = this.files[0];
            if (file) {
                let reader = new FileReader();
                reader.onload = function (event) {
                    $("#imgPreviewBanner").attr('src', event.target.result);
                }
                reader.readAsDataURL(file);
            }
        });

    })
</script>


