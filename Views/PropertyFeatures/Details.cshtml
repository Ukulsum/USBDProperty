@model USBDProperty.Models.PropertyFeatures

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Property Features</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.PropertyFeatureId)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.PropertyFeatureId)
                </dd>
                <dt class="col-sm-5">
                    @Html.Raw(Model.PropertyFeatureName)
                </dt>
                <dd class="col-sm-7">
                    @Html.Raw(Model.PropertyFeatureName)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.PropertyDetails)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.PropertyDetails.Location)
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.PropertyFeatureId">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</main>


