@model IEnumerable<USBDProperty.Models.PropertyFeatures>

@{
    ViewData["Title"] = "AllFeatureProperty";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title text-center">Property Feature Listing</h5>
        <hr style="width:100%; " />
         <form asp-action="AllFeatureProperty">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach(var item in Model)
            {
                 <div class="form-group form-check col-md-4 col-sm-6">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" /> @Html.DisplayName(@item.PropertyFeatureName)
                        </label>
                    </div>
            }
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" id="btnSave" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div><a asp-action="Index">Back to List</a></div>
                </div>
            </div>
        </form>
    </div>
</div>

