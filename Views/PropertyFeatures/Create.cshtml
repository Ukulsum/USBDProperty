@model USBDProperty.Models.PropertyFeatures

@{
    ViewData["Title"] = "Create";
    if(User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title text-center">Property Features Listing</h5>
        <hr style="width:100%; " />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <div class="form-group">
                        <label asp-for="PropertyFeatureName" class="control-label"></label>
                        <input asp-for="PropertyFeatureName" class="form-control" />
                        <span asp-validation-for="PropertyFeatureName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <div class="form-group">
                        <label asp-for="FeatureDescription" class="control-label"></label>
                        <textarea asp-for="FeatureDescription" class="form-control"></textarea>
                        <span asp-validation-for="FeatureDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" id="btnSave" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div><a asp-action="Index">Back to List</a></div>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            CKEDITOR.replace('FeatureDescription', {
                height: 300,
                width: '100%',
            });
        })
    </script>
}



