@model USBDProperty.Models.PropertyFeatures

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Property Feature</h5>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PropertyFeatureId" />
                <div class="row">
                    <div class="col-md-7">
                        <div class="form-group">
                            <label asp-for="PropertyFeatureName" class="control-label"></label>
                            <textarea asp-for="PropertyFeatureName" class="form-control"></textarea>
                            <span asp-validation-for="PropertyFeatureName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label asp-for="PropertyInfoId" class="control-label"></label>
                            <select asp-for="PropertyInfoId" class="form-control" asp-items="ViewBag.PropertyInfoId"></select>
                            <span asp-validation-for="PropertyInfoId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group mt-2">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="col-md-3 mt-2">
                        <div class="form-group">
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</main>

@section Scripts{
<script>
    $(document).ready(function (){
         CKEDITOR.replace('PropertyFeatureName', {
            height: 300,
            width: '100%',
         });
    })
</script>
}



