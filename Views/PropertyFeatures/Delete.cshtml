@model USBDProperty.Models.PropertyFeatures

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main">
    <div class="card">
        <div class="card-body">

            <h5 class="card-title">Are you sure you want to delete this?</h5>
            <h4>Property Features</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.PropertyFeatureId)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.PropertyFeatureId)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.PropertyFeatureName)
                </dt>
                <dd class="col-sm-7">
                    @Html.Raw(Model.PropertyFeatureName)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.PropertyDetails)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.PropertyDetails.Location)
                </dd>
            </dl>
            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="PropertyFeatureId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</main>



