@model USBDProperty.Models.PropertyFeatures

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title text-center text-danger">Are you sure you want to delete this?</h5>
        <hr style="width:100%; " />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PropertyFeatureId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PropertyFeatureId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PropertyFeatureName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PropertyFeatureName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FeatureDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.FeatureDescription)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PropertyFeatureId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>


