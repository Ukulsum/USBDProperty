@model USBDProperty.Models.PropertyType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title text-center">Property Types Listing</h5>
        <hr style="width:100%; " />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="ParentPropertyTypeId" class="control-label"></label>
                        <select asp-for="ParentPropertyTypeId" class="form-control" asp-items="@ViewBag.PropertyTypes">
                            <option value="0">Select Parent</option>
                        </select>
                        <span asp-validation-for="ParentPropertyTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="PropertyTypeName" class="control-label"></label>
                        <input asp-for="PropertyTypeName" class="form-control" />
                        <span asp-validation-for="PropertyTypeName" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="form-group form-check col-md-6">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsLand" id="checkActive" /> @Html.DisplayNameFor(model => model.IsLand)
                </label>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div><a asp-action="Index">Back to List</a></div>
                </div>
            </div>
        </form>
    </div>
</div>


