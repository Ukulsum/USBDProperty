@model USBDProperty.Models.PropertyType

@{
    ViewData["Title"] = "Delete";
    if (User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title text-center">Are you sure you want to delete this?</h5>
        <hr style="width:100%;" />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PropertyTypeId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PropertyTypeId)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PropertyTypeName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PropertyTypeName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ParentPropertyTypeId)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ParentPropertyTypeId)
            </dd>
        </dl>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="PropertyTypeId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
