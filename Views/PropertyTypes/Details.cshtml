@model USBDProperty.Models.PropertyType

@{
    ViewData["Title"] = "Details";
     if(User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }   
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title text-center">Property Types Details</h5>
        <hr style="width:100%;" />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.PropertyTypeId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PropertyTypeId)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.PropertyTypeName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PropertyTypeName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ParentPropertyTypeId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ParentPropertyTypeId)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.PropertyTypeId">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

