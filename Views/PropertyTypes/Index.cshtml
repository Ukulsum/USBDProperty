@model IEnumerable<USBDProperty.Models.PropertyType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PropertyTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentPropertyTypeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentPropertyTypeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PropertyTypeId"><i class="bi bi-pencil-square"></i></a> |
                <a asp-action="Details" asp-route-id="@item.PropertyTypeId"><i class="bi bi-eye-fill"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.PropertyTypeId"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
