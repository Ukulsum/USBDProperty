@model IEnumerable<USBDProperty.Models.PropertyType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-9">
                <h5 class="card-title">List of Property</h5>
            </div>
            <div class="col-md-3">
                <h5 class="card-title"><a asp-action="Create">Create New</a></h5>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PropertyTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ParentPropertyTypeId)
                        @*@Html.DisplayNameFor(model => model.PropertyTypeName)*@
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PropertyTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParentPropertyTypeId)
                        </td>
                        <td class="col-md-2">
                            <div class="btn-group">
                                <button type="button" class="btn btn-success">Action</button>
                                <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="visually-hidden">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item text-primary" asp-action="Edit" asp-route-id="@item.PropertyTypeId"><i class="bi bi-pencil-square"></i>Edit</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-primary" asp-action="Details" asp-route-id="@item.PropertyTypeId"><i class="bi bi-eye-fill"></i>Details</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-primary" asp-action="Delete" asp-route-id="@item.PropertyTypeId"><i class="bi bi-trash"></i>Delete</a></li>

                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
