            }
        })
    }



    function getLandProperty(){
        $.ajax({
            url: "/PropertyDetails/HomeLandProperty",
            method: "Get",
            success: function(res){
                var landPropertylist = "";
                landPropertylist += '<ul class="row">';
                $.each(res.data, function(index, value){  
