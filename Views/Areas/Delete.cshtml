@model USBDProperty.Models.Area

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main">
    <div class="card">
        <div class="card-body">

            <h5 class="card-title text-center">Are you sure you want to delete this?</h5>
            <hr style="width:100%;"/>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AreaId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AreaId)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AreaName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AreaName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.City.CityName)
                </dd>
            </dl>
            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="AreaId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</main>



