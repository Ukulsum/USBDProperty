@model USBDProperty.Models.Area

@{
    ViewData["Title"] = "Details";
    if (User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        // Layout = "~/Views/Shared/_AdminLayout.cshtml";
        Layout = "~/Views/Shared/LayoutAdminLTe.cshtml";
    }
}

<div class="content-wrapper" style="min-height: 1302.12px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Locations</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Areas">Area</a></li>
                        <li class="breadcrumb-item active">Details</li>
                    </ol>
                </div>
            </div>

        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-9">
                                    <h3 class="card-title">Details of Area</h3>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.AreaId)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.AreaId)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.AreaName)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.AreaName)
                                </dd>
                                <dt class="col-sm-3">
                                    @Html.DisplayNameFor(model => model.City)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.City.CityName)
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer">
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model?.AreaId">Edit</a> |
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>



