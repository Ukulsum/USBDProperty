@model USBDProperty.Models.Area

@{
    ViewData["Title"] = "Details";
   if(User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<main id="main">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">Area Details</h5>
            <hr style="width:100%;"/>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AreaId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AreaId)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AreaName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AreaName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.City.CityName)
                </dd>
            </dl>
            <div>
                    <a asp-action="Edit" asp-route-id="@Model?.AreaId">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</main>



