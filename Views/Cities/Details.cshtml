@model USBDProperty.Models.City

@{
    ViewData["Title"] = "Details";
    if(User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<main id="main">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">City Details</h5>
            <hr style="width:100%;"/>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CityId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CityId)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CityName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CityName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Division)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Division.DivisionName)
                </dd>
            </dl>
            <div>
                    <a asp-action="Edit" asp-route-id="@Model?.CityId">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</main>


