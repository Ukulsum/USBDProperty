@model IEnumerable<USBDProperty.Models.City>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-9">
                    <h5 class="card-title">List of City</h5>
                </div>
                <div class="col-md-3">
                    <h5 class="card-title"><a asp-action="Create">Create New</a></h5>
                </div>
            </div>


            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CityId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CityName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Division)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CityId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CityName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Division.DivisionName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CityId"><i class="bi bi-pencil-square"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.CityId"><i class="bi bi-eye-fill"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.CityId"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>


