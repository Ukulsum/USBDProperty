        function HomeAgent(){
            var curloc = $(location).attr('href');
            var url = curloc.split('/');
            var id = url[url.length - 1];
            $.ajax({
                url: "/DevelopersorAgents/HomeAgent/" + id,
                method: "Get",
                success: function(res){
                    var devAgentTitle = "";
                    var devAgentLogo = "";
                    var devAgentBanner = "";
                    var devAgentAbout = "";
                    $.each(res.data, function(index, value){
                        devAgentTitle += '<title  >USBD Property"s - '+ value.companyName+' </title>'
                        devAgentLogo += '<img src="'+ value.logo+'">'
                        devAgentBanner += '<img src="'+ value.banner+'" style="width:100%">'
                        devAgentAbout += '<p>'+ value.aboutUs +'</p>'
                    });
                    $(".load_title").empty();
                    $(".load_title").html(devAgentTitle);
                    $(".logo").empty();
                    $(".logo").html(devAgentLogo);
                    $(".load_banner").empty;
                    $(".load_banner").html(devAgentBanner);
                    $(".load_about").empty;
                    $(".load_about").html(devAgentAbout);

                }
            })
        }

        function PostClientData(){
            var client = {
                ClientContactId:0,
                ClientName: $("#clientName").val(),
                Email: $("#email").val(),
                ContactNo: $("#contactNo").val(),
                Message: $("#message").val(),
                ContactDate: Date
            }
            $.ajax({
                url: "/ClientContacts/Save",
                type: "POST",
                data: JSON.stringify(client),
                dataType: "JSON",
                contentType: "application/json",
                success: function(res){
                     $("#clientName").val(''),
                     $("#email").val(''),
                     $("#contactNo").val(''),
                     $("#message").val('')
                }
            })
        }

          function getFooterProperty(){
               var curloc = $(location).attr('href');
               var url = curloc.split('/');
               var id = url[url.length - 1];
              $.ajax({
                  url: "/PropertyDetails/AgentHomeFooterProperty/" + id,
                  method: "Get",
                  success: function(res){
                      var propertylist = "";
                      $.each(res.data, function(index, value){
                        propertylist += '<li><div class="img-post"> <img src="' + value.imagePath + '" height="59px" width="59px" alt=""> </div><div class="text-post"> <a href="#.">' + value.title + '</a> <span>BDT.' + value.totalPrice + ' TK</span> </div></li>'
                      });
                      $(".load_FooterProperty").empty();
                      $(".load_FooterProperty").html(propertylist);
                  }
              })
        }
