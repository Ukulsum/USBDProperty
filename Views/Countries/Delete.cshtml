@model USBDProperty.Models.Country

@{
    ViewData["Title"] = "Delete";
    if(User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<main id="main">
    <div class="card">
        <div class="card-body">

            <h5 class="card-title text-center">Are you sure you want to delete this?</h5>
            <hr style="width:100%; "/>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CountryID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CountryID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CountryName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CountryName)
                </dd>

            </dl>
            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="CountryID" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</main>

