@model USBDProperty.Models.Country

@{
    ViewData["Title"] = "Edit";
    if(User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<main id="main">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><a asp-action="Index" asp-controller="Countries"><i class="bi bi-arrow-left"></i></a> Updating Country</h5>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CountryID" />
                <div class="form-group">
                    <label asp-for="CountryName" class="control-label"></label>
                    <input asp-for="CountryName" class="form-control" />
                    <span asp-validation-for="CountryName" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group mt-2">
                           <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>



