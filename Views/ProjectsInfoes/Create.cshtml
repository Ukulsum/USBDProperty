@model USBDProperty.Models.ProjectsInfo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AgentLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title text-center">Projects Create</h5>
        <hr style="width:100%; " />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create" enctype="multipart/form-data" method="post" asp-controller="ProjectsInfoes">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <h2>Projects Information</h2>
                        <div class="form-group col-md-4">
                            <label asp-for="AgentID" class="control-label"></label>
                            <select asp-for="AgentID" class="form-control" asp-items="ViewBag.AgentID">
                                <option value="0">Select Developer or Agent</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="ProjectName" class="control-label"></label>
                            <input asp-for="ProjectName" class="form-control" />
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" id="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-8 form-group">
                                <label class="control-label">Project Overview Video</label>
                                <input type="file" id="videoFile" name="ProjectVideoPath" class="form-control" accept="video/*" />
                            </div>
                            <div class="col-md-4">
                                <div style="width:170px;height:170px; border:2px solid #012970; border-radius:10px; padding:10px;">
                                    <video controls style="width:145px;height:145px;" alt="Image Upload" id="videoPreview"></video>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 row">
                        <h2>Location</h2>
                        <hr />
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label">Country</label>
                                <select id="drpCountry" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Division</label>
                                <select id="drpDivision" class="form-control"></select>
                            </div>

                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label">City</label>
                                <select id="drpCity" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Area</label>
                                <select asp-for="AreaID" id="drpArea" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label">Address</label>
                                <input type="text" asp-for="Location" class="form-control" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8 form-group">
                                <label class="control-label">Location Map</label>
                                <input type="file" name="MapPath" class="form-control" id="imgInput" />
                            </div>
                            <div class="col-md-4">
                                <div style="width:170px;height:170px; border:2px solid #012970; border-radius:10px; padding:10px;">
                                    <img style="width:145px;height:145px;" alt="Image Upload" id="imgPreview">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    <div class="form-group col-md-6">
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>


            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}


<script>

    $(document).ready(function () {
        loadCountry();
        CKEDITOR.replace('Description', {
            height: 300,
            width: '100%',
        });
        $("#videoFile").change(function(){
            const file = this.files[0];
            if(file){
                let reader = new FileReader();
                reader.onload = function(event){
                    $("#videoPreview").attr('src', event.target.result);
                }
                reader.readAsDataURL(file);
              }
        });
        $("#imgInput").change(function () {
            const file = this.files[0];
            if (file) {
                let reader = new FileReader();
                reader.onload = function (event) {
                    $("#imgPreview").attr('src', event.target.result);
                }
                reader.readAsDataURL(file);
            }
        });



        $("#drpCountry").change(function () {
            loadDivision($(this).val())
        })
        $("#drpDivision").change(function () {
            loadCity($(this).val())
        })

        $("#drpCity").change(function () {
            loadArea($(this).val())
        })
    });
    function loadCountry() {
        $.get("/Countries/GetCountry", function (data, status) {
            $("#drpCountry").empty();
            $("#drpCountry").append($('<option></option>').val("0").html("Select country"));
            $.each(data, function (i, v) {
                $("#drpCountry").append($('<option></option>').val(v.countryID).html(v.countryName));
            })

        })
    }

    function loadDivision(cid) {
        $.get("/Divisions/GetDivision?cid=" + cid, function (data, status) {
            $("#drpDivision").empty();
            $("#drpDivision").append($('<option></option>').val("0").html("Select Division"));
            $.each(data, function (i, v) {
                $("#drpDivision").append($('<option></option>').val(v.divisionID).html(v.divisionName));
            })

        })
    }
    function loadCity(did) {
        $.get("/Cities/GetCities?did=" + did, function (data, status) {
            $("#drpCity").empty();
            $("#drpCity").append($('<option></option>').val("0").html("Select City"));
            $.each(data, function (i, v) {
                $("#drpCity").append($('<option></option>').val(v.cityId).html(v.cityName));
            })

        })
    }
    function loadArea(cid) {
        $.get("/Areas/GetArea?cid=" + cid, function (data, status) {
            $("#drpArea").empty();
            $("#drpArea").append($('<option></option>').val("0").html("Select Area"));
            $.each(data, function (i, v) {
                $("#drpArea").append($('<option></option>').val(v.areaId).html(v.areaName));
            })

        })
    }
</script>

}
