                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Developers.CompanyName)
                        @*<img src="@Url.Content(Model.Developers.Banner)" class="img-responsive" />*@
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.LocationMap)
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.LocationMap != null)
                        {
                            <img src="@Url.Content(Model.LocationMap)" class="img-responsive" />
