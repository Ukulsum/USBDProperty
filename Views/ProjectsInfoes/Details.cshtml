@model USBDProperty.Models.ProjectsInfo

@{
    ViewData["Title"] = "Details";
    if (User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        // Layout = "~/Views/Shared/_AdminLayout.cshtml";
        Layout = "~/Views/Shared/LayoutAdminLTe.cshtml";
    }
}


<div class="content-wrapper" style="min-height: 1302.12px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Projects Information</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="ProjectsInfoes">Projects Informations</a></li>
                        <li class="breadcrumb-item active">Details</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-9">
                                    <h3 class="card-title">Details of Projects</h3>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    @if (Model.ProjectVideo != null)
                                    {
                                        <video controls width="100%" height="200px"><source src="@Url.Content(Model.ProjectVideo)" /></video>
                                    }
                                </div>
                            </div>
                            <dl class="row">
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Title)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Title)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Description)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.Raw(Model.Description)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.ProjectName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.ProjectName)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Location)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Location)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Developers.Logo)
                                </dt>
                                <dd class="col-sm-8">
                                    <img src="@Url.Content(Model.Developers.Logo)" class="img-responsive" height="180" width="220"/>
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Developers)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Developers.CompanyName)
                                </dd>

                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.LocationMap)
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.LocationMap != null)
                                    {
                                        <img src="@Url.Content(Model.LocationMap)" class="img-responsive" height="180" width="220" />
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer">
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>




