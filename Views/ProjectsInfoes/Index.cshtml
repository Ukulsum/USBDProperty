@model IEnumerable<USBDProperty.Models.ProjectsInfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AgentLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-9">
                <h5 class="card-title">List of Property</h5>
            </div>
            <div class="col-md-3">
                <h5 class="card-title"><a asp-action="Create">Create New</a></h5>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProjectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LocationMap)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProjectVideo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.Raw(item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProjectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            @*     @Html.DisplayFor(modelItem => item.LocationMap) *@
                            @if (item.LocationMap != null)
                            {
                                <img src="@Url.Content(item.LocationMap)" class="img-responsive" height="100px" width="100px" />
                            }
                        </td>
                        <td>
                            @*   @Html.DisplayFor(modelItem => item.Developers.Banner) *@
                            @if (item.ProjectVideo != null)
                            {
                                @*<video src="@Url.Content(item.ProjectVideo)"></video>*@
                                <video controls width='200' height='100'><source src="@Url.Content(item.ProjectVideo)"/></video>

                            }
                        </td>
                        <td class="col-md-2">
                            <div class="btn-group">
                                <button type="button" class="btn btn-success">Action</button>
                                <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="visually-hidden">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item text-primary" asp-action="Create" asp-controller="ProjectImageGalleries" asp-route-id="@item.Id"><i class="bi bi-box-arrow-up"></i>Add More Pic</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i>Details</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-primary" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a></li>
                                    
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>



