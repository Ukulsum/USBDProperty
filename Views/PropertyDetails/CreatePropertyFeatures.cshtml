@* @model USBDProperty.Models.PropertyFeatures *@
@*@model IEnumerable<USBDProperty.Models.PropertyFeatures>*@

@{
    ViewData["Title"] = "CreatePropertyFeatures";
    if(User.IsInRole("Agent"))
    {
        Layout = "~/Views/Shared/_AgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}
<form asp-action="CreatePropertyFeatures" asp-controller="PropertyDetails" method="post">
<div class="card">
    <div class="card-body">
        <h5 class="card-title text-center">Property Feature Listing</h5>
        <hr style="width:100%;" /> 
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label"> Property Name: </label>
                </div>
                <div class="col-md-10">
                     <select class="form-control" asp-items="ViewBag.propertyInfoId" id="propertyName"> </select>
                </div>
            </div>
           
        </div> 
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <table>
                    <tr>
                        @{
                            int fnt = 0;
                            List<USBDProperty.ViewModels.AssignPropertyFeatures> features = ViewBag.propertyFeatures;
                            foreach(var feature in features)
                            {
                                if(fnt++ % 3 == 0)
                                {
                                    @:</tr><tr>
                                }
                                @:<td>
                                    <input type="checkbox" name="selectedFeatures" value="@feature.PropertyFeaturedId" @(Html.Raw(feature.Assigned ? "checked=\"checked\"" : ""))/>
                                    @feature.PropertyFeaturedId @: @feature.PropertyName
                                @:</td>
                            }
                            @:</tr>
                        }
                </table>
            </div>
        </div>

        <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div>
                        <a asp-action="Index">Back to List</a>
                        <a asp-action="Create" asp-controller="PropertyFeatures"  asp-route-id="@ViewBag.pid" class="btn btn-success">Add Feature</a>
                    </div>
                </div>
            </div>
        
</div>
    </div>
</form>