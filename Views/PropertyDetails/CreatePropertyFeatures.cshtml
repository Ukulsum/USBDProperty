        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <table>
                    <tr>
                        @{
                            int fnt = 0;
                            List<USBDProperty.ViewModels.AssignPropertyFeatures> features = ViewBag.propertyFeatures;
                            foreach(var feature in features)
                            {
                                if(fnt++ % 3 == 0)
                                {
                                    @:</tr><tr>
                                }
                                @:<td>
                                    <input type="checkbox" name="selectedFeatures" value="@feature.PropertyFeaturedId" @(Html.Raw(feature.Assigned ? "checked=\"checked\"" : ""))/>
                                    @feature.PropertyFeaturedId @: @feature.PropertyName
                                @:</td>
                            }
                            @:</tr>
                        }
                </table>
            </div>
        </div>

        <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div>
                        <a asp-action="Index">Back to List</a>
                        <a asp-action="Create" asp-controller="PropertyFeatures" class="btn btn-success">Add Feature</a>
                    </div>
                </div>
            </div>
        
