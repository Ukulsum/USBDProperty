@section Scripts{
<script>

    $(document).ready(function (){
        let isLand=false;
        $("#btnSave").attr('disabled', 'disabled');             
        $("#checkActive").click(function() {
            if($(this).is(':checked')){
                $("#btnSave").removeAttr('disabled', 'disabled');
            }
            else{
                 $("#btnSave").attr('disabled', 'disabled');
            }
        });


        $("#landDiv").hide();
        loadCountry();
        loadDeveloper();
        loadParentType();
        loadUNit();
         CKEDITOR.replace('Description', {
            height: 300,
            width: '100%',
         });
          $("#imageInput").change(function () {
                const file = this.files[0];
                if (file) {
                    let reader = new FileReader();
                    reader.onload = function (event) {
                        $("#imgPreview").attr('src', event.target.result);
                    }
                    reader.readAsDataURL(file);
                }
            });

        $("#parenTypes").change(function () {
                $.get("/PropertyTypes/GetChildType?pid=" + $(this).val(), function (data, status) {
                    $("#drptypes").empty();
                    $("#drptypes").append($('<option></option>').val("0").html("Select"));
                    $.each(data, function (i,v) {

                        $("#drptypes").append($('<option data-island='+v.isLand +'></option>').val(v.propertyTypeId).html(v.propertyTypeName));
                    })

          })
        })

          $("#drptypes").change(function () {
                isLand=this.selectedOptions[0].getAttribute('data-island');
                        if(isLand === 'true') {
                              console.log( "True part")
                              $("#flatdiv").hide();
                              $("#landDiv").show();
                        }
                       if(isLand === 'false') {
                            $("#flatdiv").show();
                            $("#landDiv").hide();
                       }
          })
            $("#drpDeveloper").change(function () {
                // alert($(this).val())
                loadPrjbyDeveloper($(this).val())
            })
            $("#drpCountry").change(function(){
                loadDivision($(this).val())
            })
            $("#drpDivision").change(function () {
                loadCity($(this).val())
            })

            $("#drpCity").change(function () {
                loadArea($(this).val())
            })
    });
        function loadParentType() {
            $.get("/PropertyTypes/GetChildType" , function (data, status) {
                $("#parenTypes").empty();
                $("#parenTypes").append($('<option></option>').val("0").html("Select type"));
                $.each(data, function (i, v) {
                    $("#parenTypes").append($('<option></option>').val(v.propertyTypeId).html(v.propertyTypeName));
                })

            })
        }
        function loadDeveloper() {
            $.get("/DevelopersorAgents/GetDeveloperProperty", function (data, status) {
                $("#drpDeveloper").empty();
                $("#drpDeveloper").append($('<option></option>').val("0").html("Select Developer or agent"));
                $.each(data.data, function (i, v) {
                    $("#drpDeveloper").append($('<option></option>').val(v.id).html(v.companyName));
                })

            })
        }
        function loadPrjbyDeveloper(devid) {
            $.get("/ProjectsInfoes/GetProjects?id=" + devid, function (data, status) {
                $("#drpprj").empty();
                $("#drpprj").append($('<option></option>').val("0").html("Select Project"));
                $.each(data.data, function (i, v) {
                     $("#drpprj").append(`<option value=${v.id}>${v.projectName}</option>`) ;
                })

            })
        }
        function loadCountry(){
            $.get("/Countries/GetCountry" , function (data, status) {
                $("#drpCountry").empty();
